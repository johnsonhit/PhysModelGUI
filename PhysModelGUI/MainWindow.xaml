<Window x:Class="PhysModelGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
        xmlns:local="clr-namespace:PhysModelGUI"
        mc:Ignorable="d"
       
        Title="Neonatal physiological model" Height="720" Width="1280" Background="Black" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Menu VerticalAlignment="Top" Height="25" Grid.ColumnSpan="3">
            <MenuItem ></MenuItem>
        </Menu>
        <StatusBar VerticalAlignment="Bottom" Height="25" Grid.ColumnSpan="3">
            <StatusBarItem>
                <TextBlock Text="Model name : "></TextBlock>
            </StatusBarItem>
            <StatusBarItem>
                <Separator></Separator>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="Simulation time : "></TextBlock>
            </StatusBarItem>
        </StatusBar>
        <StackPanel Grid.Column="0" Margin="10,35,0,0">
            <TextBlock Text=" INTERVENTIONS" TextAlignment="Center" Foreground="White" FontSize="20" Margin="0,0,0,10"></TextBlock>
            <Expander IsExpanded="False" Header="CONDITIONS" Background="DarkSlateGray" Padding="5,5,5,5" Margin="10,0,0,10" Opacity="0.8" Foreground="White" BorderThickness="0">
                <StackPanel Margin="10,0,10,5" Background="SlateGray" Opacity="0.8">
                    <Expander Header=" cardiovascular" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" pulmonary" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" hypoxia" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" gasexchange units" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>






                </StackPanel>
            </Expander>

            <Expander IsExpanded="False" Header="GLOBAL MODEL SETTINGS" Background="DarkSlateGray" Margin="10,0,0,10" Padding="5,5,5,5" Opacity="0.8" Foreground="White" BorderThickness="0">
                <StackPanel Margin="10,0,10,5" Background="SlateGray" Opacity="0.8">
                    <Expander Header=" cardiovascular" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">
                        
                    </Expander>
                    <Expander Header=" lung and chestwall" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" metabolic" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
           
                </StackPanel>
            </Expander>
            <Expander IsExpanded="False" Header="SPECIFIC MODEL SETTINGS" Background="DarkSlateGray" Padding="5,5,5,5" Margin="10,0,0,10" Opacity="0.8" Foreground="White" BorderThickness="0">
                <StackPanel Margin="10,0,10,5" Background="SlateGray" Opacity="0.8">
                    <Expander Header=" compartments" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" connectors" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" containers" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" gasexchange units" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" acidbase model" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" autonomic nervous system model" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" atrioventricular interaction model" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" breathing model" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" ecg model" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">


                    </Expander>
                    <Expander Header=" heart model" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" oxygenation model" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" ventilator model" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                </StackPanel>
            </Expander>

        </StackPanel>
        <StackPanel Grid.Column="1" Margin="0,35,20,0">
            <TextBlock Text=" MODEL GRAPHICS" TextAlignment="Center" Foreground="White" FontSize="20" Margin="0,0,0,10"></TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="2" Margin="0,35,20,0">
            <TextBlock Text=" MONITORING" TextAlignment="Center" Foreground="White" FontSize="20" Margin="0,0,0,10"></TextBlock>
            <Expander IsExpanded="False" Header="PATIENT MONITOR" Background="DarkSlateGray" Padding="5,5,5,5" Margin="10,0,0,10" Opacity="0.8" Foreground="White" BorderThickness="0">
                <StackPanel Margin="10,0,10,5" Background="SlateGray" Opacity="0.8">
  
                </StackPanel>
            </Expander>
            <Expander IsExpanded="False" Header="VITAL PARAMETERS" Background="DarkSlateGray" Padding="5,5,5,5" Margin="10,0,0,10" Opacity="0.8" Foreground="White" BorderThickness="0">
                <StackPanel Margin="10,0,10,5" Background="SlateGray" Opacity="0.8">
           
                </StackPanel>
            </Expander>
            <Expander IsExpanded="False" Header="ADDITIONAL PARAMETERS" Background="DarkSlateGray" Padding="5,5,5,5" Margin="10,0,0,10" Opacity="0.8" Foreground="White" BorderThickness="0">
                <StackPanel Margin="10,0,10,5" Background="SlateGray" Opacity="0.8">
                    <Expander Header=" cardiovascular" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" pulmonary" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" hypoxia" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" gasexchange units" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                </StackPanel>
            </Expander>
            <Expander IsExpanded="False" Header="GRAPHS AND CURVES" Background="DarkSlateGray" Padding="5,5,5,5" Margin="10,0,0,10" Opacity="0.8" Foreground="White" BorderThickness="0">
                <StackPanel Margin="10,0,10,5" Background="SlateGray" Opacity="0.8">
                    <Expander Header=" cardiovascular" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" pulmonary" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" hypoxia" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" gasexchange units" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                </StackPanel>
            </Expander>
            <Expander IsExpanded="False" Header="MANIKIN" Background="DarkSlateGray" Padding="5,5,5,5" Margin="10,0,0,10" Opacity="0.8" Foreground="White" BorderThickness="0">
                <StackPanel Margin="10,0,10,5" Background="SlateGray" Opacity="0.8">
                    <Expander Header=" airway and breathing" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" pulmonary" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" hypoxia" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                    <Expander Header=" gasexchange units" Foreground="White" Padding="2,2,2,2" Margin="0,0,0,5">

                    </Expander>
                </StackPanel>
            </Expander>

        </StackPanel>
        <skia:SKElement x:Name="canvasDiagramSkeleton" Grid.Column="1" Margin="20,75,20,150" Opacity="0.3"  PaintSurface="CanvasDiagramSkeleton_PaintSurface"></skia:SKElement>
        <skia:SKElement x:Name="canvasDiagram" Grid.Column="1" Margin="20,75,20,150" PaintSurface="CanvasDiagram_PaintSurface"></skia:SKElement>
        
        
    </Grid>
</Window>
